<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Topjava</display-name>

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.UserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.MealServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>mealServlet</servlet-name>
        <url-pattern>/meals</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MealsAdd</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.MealsAdd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MealsAdd</servlet-name>
        <url-pattern>/mealsAdd</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MealsRemove</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.MealsRemove</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MealsRemove</servlet-name>
        <url-pattern>/mealsRemove</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MealsUpdate</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.MealsUpdate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MealsUpdate</servlet-name>
        <url-pattern>/mealsUpdate</url-pattern>
    </servlet-mapping>




</web-app>
